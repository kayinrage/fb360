%h1
  = title
  = link_to 'Back', admin_users_path, class: 'btn btn-default'


.col-md-6
  = simple_form_for [:admin, user] do |f|
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :admin
    - if user.persisted?
      = f.input :archived
    - else
      = f.input :password
      = f.input :password_confirmation
    = f.button :submit
